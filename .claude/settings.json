{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/session-start.sh",
            "timeout": 300000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "mvn spotless:apply",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
